<html>
    <head>
        <link rel="stylesheet" type="text/css" href="<%= url_prefix %>fonts/opensans/stylesheet.css">
        <link rel="stylesheet" type="text/css" href="<%= url_prefix %>css/reset.css">
        <link rel="stylesheet" type="text/css" href="<%= url_prefix %>css/style.css">
        <title>Overview</title>
        <script src="<%= url_prefix %>js/jquery.js"></script>
    </head>
    <body>
        <header>
            <h1><%= @site_name %></h1>
            <nav>
                <ul>
                    <li>
                        <%= nav_item(url_prefix, 'Overview', false) %>
                    </li>
                    <li>
                        <%= nav_item("#{url_prefix}systems", 'Systems', false) %>
                        <ul>
                            <% @groups.each do |group| %>
                                <%= nav_item("#{url_prefix}groups/#{group.id}/systems", group.name) %>
                            <% end %>
                        </ul>
                    </li>
                    <li>
                        <a href="<%= url_prefix %>admin">Admin</a>
                        <% if request.path.start_with?('/admin') %>
                            <ul>
                                <%= nav_item("#{url_prefix}admin/systems", 'Systems') %>
                                <%= nav_item("#{url_prefix}admin/groups", 'Groups') %>
                                <%= nav_item("#{url_prefix}admin/configs", 'Configs') %>
                                <%= nav_item("#{url_prefix}admin/alerts", 'Alerts') %>
                                <%= nav_item("#{url_prefix}admin/scripts", 'Scripts') %>
                                <%= nav_item("#{url_prefix}admin/stats", 'Stats') %>
                            </ul>
                        <% end %>
                    </li>
                </ul>
            </nav>
        </header>
        <main>
            <%= yield %>
        </main>
    </body>
</html>
