<h2 class="edit">Metrics</h2>
<p id="add-command">
    Add command:
    <select id="command-select">
        <option></option>
        <% command_actions.each do |command| %>
            <option value="<%= command.name %>"><%= command.human_name %></option>
        <% end %>
    </select>
</p>

<% command_actions.each do |command| %>
    <%= erb :command_config, locals: {command: command, action: "/admin/scripts/#{@record.id}/commands"} %>
<% end %>

<script src="/js/jquery.js"></script>
<script>
    $('#command-select').change(function() {
        $('form.command').hide();
        $('form[data-command="' + $(this).val() + '"]').show();
    });
</script>
